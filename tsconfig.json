{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Strict Type Checking Options */
    // Enable all strict type-checking options
    "strict": true,
    // Array/object index access returns T | undefined (prevents out-of-bounds errors)
    "noUncheckedIndexedAccess": true,
    // Require 'override' keyword when overriding base class methods
    "noImplicitOverride": true,
    // Catch missing 'break' statements in switch cases
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    // Use ESNext modules (import/export syntax)
    "module": "ESNext",
    // Modern module resolution for Vite/esbuild/Rollup (supports package exports field)
    "moduleResolution": "bundler",
    // Allow importing .json files as modules
    "resolveJsonModule": true,
    // Allow default imports from modules with no default export
    "allowSyntheticDefaultImports": true,
    // Emit __esModule in compiled output for CommonJS interop
    "esModuleInterop": true,
    // Require explicit 'type' keyword for type-only imports/exports (better tree-shaking)
    "verbatimModuleSyntax": true,

    /* Emit Options */
    // Compile to ES2022 (modern JavaScript with top-level await, private fields, etc.)
    "target": "ES2022",
    // Include ES2022 standard library (Promise, Array.at(), etc.)
    "lib": ["ES2022"],
    // Generate .d.ts declaration files for type checking across packages
    "declaration": true,
    // Generate source maps for .d.ts files (better IDE navigation)
    "declarationMap": true,
    // Generate .js.map source maps for debugging
    "sourceMap": true,
    // Emit JavaScript files (false would only type-check without output)
    "noEmit": false,
    // Enable incremental compilation (faster rebuilds by caching)
    "incremental": true,

    /* Quality and Safety Options */
    // Skip type checking of .d.ts files in node_modules (faster, more flexible with third-party libs)
    "skipLibCheck": true,
    // Ensure import paths match file casing (prevents issues on case-sensitive filesystems)
    "forceConsistentCasingInFileNames": true,
    // Ensure each file can be transpiled independently (required for Vite/esbuild)
    "isolatedModules": true,

    /* Path Mapping (for workspace aliases) */
    // Base directory for resolving non-relative module names
    "baseUrl": ".",
    // Path aliases (e.g., "@decksmith/schema" -> "packages/schema/src")
    // Empty for now, packages will add their own paths
    "paths": {}
  },
  // Exclude build outputs and dependencies from type checking
  "exclude": ["node_modules", "dist", "build", ".turbo", "coverage", "storybook-static"]
}
