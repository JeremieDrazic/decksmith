# Automatically install peer dependencies
auto-install-peers=true

# Don't fail on peer dependency conflicts (be flexible)
strict-peer-dependencies=false

# Strict mode: no phantom dependencies (prevent accidental imports from hoisted deps)
shamefully-hoist=false

# Hoist specific patterns for editor/tooling integration
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Workspace settings: use local packages via symlinks
link-workspace-packages=true
prefer-workspace-packages=true

# Security: disable automatic lifecycle scripts from dependencies
enable-pre-post-scripts=false
